      double precision pi,euler,deg2rad,rad2deg,hr2deg,hr2min,rad2sec,
     +                 zero,tiny
      double precision g,h,hbar,e,c,ckms,kerg,kev,mp,me,rbohr,fine,  
     +                 e0,ev2erg,sig,asol,weinfre,weinlam,rhonuc
